# Frontend Environment Variables for Production
# ===========================================
# These are critical for proper frontend functionality in production

# API URLs - IMPORTANT: Update these with your actual API domain
NEXT_PUBLIC_API_URL=https://your-api-domain.com/api/v1
INTERNAL_API_URL=https://your-api-domain.com/api/v1

# Authentication Settings
NEXTAUTH_URL=https://your-frontend-domain.com
NEXTAUTH_SECRET=your-nextauth-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Port Settings
FRONTEND_PORT=3033

# Backend Environment Variables
# ===========================================
DATABASE_URL=postgresql://postgres:postgres@db:5432/estoca
POSTGRES_SERVER=db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=estoca
SECRET_KEY=your-secret-key
OAUTH_REDIRECT_URL=https://your-frontend-domain.com/api/auth/callback/google
BACKEND_CORS_ORIGINS=["https://your-frontend-domain.com"]
BACKEND_PORT=8033
POSTGRES_PORT=5433 